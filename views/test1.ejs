                </div>                      
                <div class="col-8 canvas-buy-col">
                    <button class="btn-secondary buy-button rounded-0" type="button">BUY TOGETHER-Rs.209.00</button>
                </div> 
            </div>    
        </div>               
        <script>
            var shopify_products = (shopify_products);
            var product_data = product_data;
            var colors_data = colors_data;
        </script>
