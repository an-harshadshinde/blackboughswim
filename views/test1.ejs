    <body>
        <div class="daquini-container">
            <div class="row">    
                <div class="col-12  kit-name-col1">                              
                    <span class="kit-name"> <%=kits['kit_name']%></span>        
                </div>
                <div class="col-12 drop-down-col">
                    <div class="row">
                        <div class="col-4 drop-down-btn">
                            <button class="btn btn-secondary dropdown-toggle drop-down-group" type="button" id="product-type-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> </button>
                                <ul class="dropdown-menu product-type-dropdown" aria-labelledby="dropdownMenuButton">
                                    <li>
                                        <a class="dropdown-item" href="#">Top</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">Bottom</a>
                                    </li>
                                </ul>
                        </div>
                        <div class="col-4 drop-down-btn">
                            <button class="btn btn-secondary dropdown-toggle drop-down-group" type="button" id="size-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Size</button>
                                <ul class="dropdown-menu size-dropdown" aria-labelledby="dropdownMenuButton">
                                    <li>
                                        <a class="dropdown-item" href="#">S</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">M</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">L</a>
                                    </li>
                                </ul>
                        </div>
                        <div class="col-4 drop-down-btn">
                            <button class="btn btn-secondary dropdown-toggle drop-down-group" type="button" id="color-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Color </button>
                                <ul class="dropdown-menu color-dropdown" aria-labelledby="dropdownMenuButton">
                                    <li>
                                        <a class="dropdown-item" href="#">S</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">M</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">L</a>
                                    </li>
                                </ul>
                        </div>
                    </div>
                </div>            
                <div class="col-md-8 col-12 image-col">
                    <div class="row slide-row">
                        <div class="col-md-12 col-12 top-pick text-center">
                            <p><%=settings[0].topText%></p>
                            <span><img src="/public/images/top_arrow.png" style="width
                            :20px;"></span>
                        </div>

                        <div class="col-md-12 top-container-col">
                            <div class="top-slider text-center">
                               <%if(productData instanceof Array){%>
                                <%var k=0%>
                                <%for(var i=0;i<productData.length;i++){%>
                                <%if(productData[i]["product_type"] == "tops"){%>
                                <div class="top-image-data">
                                    <img src="<%=productData[i]['img']%>"
                                        data-type="<%=productData[i]['product_type']%>"
                                        data-name="<%=productData[i]['product_name']%>"
                                        data-price="<%=productData[i]['product_price']%>"
                                        data-variant="<%=productData[i]['variantId']%>"
                                        data-id="<%=productData[i]['product_id']%>" alt='Generic placeholder thumbnail'
                                        class="img-<%=productData[i]['product_id']%>">
                                </div>
                                <%k++%>
                                <%}%>
                                    <%}%>
                                    <%if(k == 3){%>

                                    <%for(var j=0;j<1;j++){%>
                                        <div class="top-image-data">
                                        </div>                  
                                    <%}%>                 
                                    <%}else if(k == 2){%>
                                        <%for(var j=0;j<2;j++){%>
                                        <div class="top-image-data">
                                        </div>                  
                                    <%}%>                 
                                    <%}else if(k==1){%>
                                        <%for(var j=0;j<3;j++){%>
                                        <div class="top-image-data">
                                        </div>                  
                                    <%}%>                 
                                    <%}%>
                                <%}%>
                                
                                <!-- <div class="top-image-data">
                                    <img src="/uploads/Athena-top2.png">
                                </div> -->

                            </div>
                        </div>
                        <div class="col-md-12 bottom-container-col">
                            <div class="bottom-slider text-center">
                                <%if(productData instanceof Array){%>
                                <%var k=0%>
                                <%for(var i=0;i<productData.length;i++){%>
                                <%if(productData[i]["product_type"] == "bottoms"){%>
                                <div class="bottom-image-data">
                                    <img src="<%=productData[i]['img']%>"
                                        data-type="<%=productData[i]['product_type']%>"
                                        data-name="<%=productData[i]['product_name']%>"
                                        data-price="<%=productData[i]['product_price']%>"
                                        data-variant="<%=productData[i]['variantId']%>"
                                        data-id="<%=productData[i]['product_id']%>" alt='Generic placeholder thumbnail'
                                        class="img-<%=productData[i]['product_id']%>">
                                </div>
                                <%k++%>
                                <%}%>
                                    <%}%>
                                   <%if(k == 3){%>

                                    <%for(var j=0;j<1;j++){%>
                                        <div class="bottom-image-data">
                                        </div>                  
                                    <%}%>                 
                                    <%}else if(k == 2){%>
                                        <%for(var j=0;j < 2;j++){%>
                                        <div class="bottom-image-data">
                                        </div>                  
                                    <%}%>                 
                                    <%}else if(k==1){%>
                                        <%for(var j=0;j<3;j++){%>
                                        <div class="bottom-image-data">
                                        </div>                  
                                    <%}%>                 
                                    <%}%>
                                <%}%>
                                
                                <!-- <div class="top-image-data">
                                    <img src="/uploads/Athena-top2.png">
                                </div> -->
                            </div>   
                           
                        </div>
                        <div class="col-12 bottom-pick text-center">
                            <span><img src="/public/images/bottom_arrow.png" style="width
                                :20px;"></span>
                            <p><%=settings[0].bottomText%></p>                            
                        </div>
                                            
                    </div>
                </div>                                
                <div class="col-md-4 col-12 details-col">
                    <div class="row kit-details">
                        <div class="col-12  kit-name-col">                              <span class="kit-name"> <%=kits['kit_name']%></span>        
                        </div>
                        <div class="col-12 kit-desc-col1">
                                <p class="kit-desc"><%=kits['description']%></p>
                        </div>
                        <%# <div class="col-12" style="margin-top:3%;font-size: 12px;">
                            <span style="color:grey">
                                Fabric :
                            </span>
                            <span style="color: #8e8e8e;">
                                FRANCE |
